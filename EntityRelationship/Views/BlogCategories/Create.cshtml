            <div class="col-md-12">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.PostIs, "PostIs", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.DropDownList("PostIs", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PostIs, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>
            <div class="text-center mt-3">
                <input type="submit" value="ذخیره اطلاعات" class="btn-save" />
        </div>
